---
import LenisScroll from "../components/lenis/LenisScroll";
import "../styles/global.css";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="icon" type="image/svg+xml" href="/favicon.ico" />
    <link rel="sitemap" href="/sitemap-index.xml" />
    <meta name="generator" content={Astro.generator} />
    <meta
      name="description"
      content="Mikhuy es una plataforma integral para administrar cafetines universitarios, facilitando la gestión de inventario, pedidos, reportes y más."
    />
    <meta
      name="keywords"
      content="Mikhuy, gestión de cafetines, cafetería universitaria, control de inventario, pedidos en línea, reportes de ventas, software para cafeterías"
    />
    <title>Mikhuy | Gestor de Cafetines Universitarios</title>

    <!-- Open Graph Meta Tags -->
    <meta
      property="og:title"
      content="Mikhuy | Gestor de Cafetines Universitarios"
    />
    <meta
      property="og:description"
      content="Mikhuy es una plataforma integral para administrar cafetines universitarios, facilitando la gestión de inventario, pedidos, reportes y más."
    />
    <meta property="og:image" content="/mikhuy_logo.webp" />
    <meta property="og:url" content="https://mikhuy-ld.netlify.app/" />
    <meta property="og:type" content="website" />

    <!-- Twitter Meta Tags -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta
      name="twitter:title"
      content="Mikhuy | Gestor de Cafetines Universitarios"
    />
    <meta
      name="twitter:description"
      content="Mikhuy es una plataforma integral para administrar cafetines universitarios, facilitando la gestión de inventario, pedidos, reportes y más."
    />
    <meta name="twitter:image" content="/mikhuy_logo.webp" />

    <!-- Canonical URL -->
    <link rel="canonical" href="https://mikhuy-ld.netlify.app/" />

    <!-- Structured Data -->
    <script type="application/ld+json">
      {
        "@context": "https://schema.org",
        "@type": "Organization",
        "name": "Mikhuy",
        "url": "https://mikhuy-ld.netlify.app/",
        "logo": "/mikhuy_logo.webp",
        "description": "Mikhuy es una plataforma integral para administrar cafetines universitarios, facilitando la gestión de inventario, pedidos, reportes y más."
      }
    </script>
  </head>
  <body class="min-h-screen bg-white text-gray-900 scroll-smooth">
    <LenisScroll client:load />
    <slot />
  </body>
</html>
